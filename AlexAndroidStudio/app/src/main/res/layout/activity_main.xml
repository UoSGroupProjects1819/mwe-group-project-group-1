<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">

    <Button
            android:layout_width="133dp"
            android:layout_height="114dp"
            android:id="@+id/button4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="240dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintHorizontal_bias="0.733"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/IwicWhite"
            app:layout_constraintVertical_bias="0.022" android:text="MAPS" android:layout_marginTop="8dp"
            android:fontFamily="@font/sharpsans"
            android:textStyle="bold" tools:textSize="24sp"/>
    <Button
            android:text="ACCOUNT"
            android:layout_width="224dp"
            android:layout_height="112dp"
            android:id="@+id/button5" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/IwicGrey"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button4"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.636"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textFontWeight="Bold"
            android:fontFamily="@font/sharpsans"
            app:layout_constraintVertical_bias="0.044" android:layout_margin="8dp" android:textStyle="bold"
            tools:textSize="24sp"/>
    <ImageView
            android:layout_width="175dp"
            android:layout_height="172dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.047"/>
    <Button
            android:text="EVENTS"
            android:layout_width="133dp"
            android:layout_height="112dp"
            android:background="@color/IwicYellow"
            android:fontFamily="@font/sharpsans"
            android:id="@+id/EventsButton" app:layout_constraintEnd_toStartOf="@+id/NewsButton"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.636" android:textStyle="bold" tools:textSize="24sp"/>
    <Button
            android:text="NEWS"
            android:layout_width="224dp"
            android:layout_height="112dp"
            android:id="@+id/NewsButton" app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/IwicBlue"
            android:fontFamily="@font/sharpsans"
            android:layout_marginTop="66dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginEnd="16dp" android:textStyle="bold" tools:textSize="24sp"/>
    <Button
            android:text="UPDATES"
            android:layout_width="373dp"
            android:layout_height="102dp"
            android:fontFamily="@font/sharpsans"
            android:id="@+id/button3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:background="@color/IwicRed"
            app:layout_constraintTop_toBottomOf="@+id/NewsButton"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.636"
            android:textStyle="normal|bold" tools:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>