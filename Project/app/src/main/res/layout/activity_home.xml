<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/MapsButton"
        android:layout_width="133dp"
        android:layout_height="114dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/IwicWhite"
        android:onClick="MapsButtonClicked"
        android:text="MAPS"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateButton"
        app:layout_constraintVertical_bias="0.022"
        tools:textSize="24sp" />

    <Button
        android:id="@+id/AccountButton"
        android:layout_width="224dp"
        android:layout_height="112dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/IwicGrey"
        android:onClick="AccountButtonClicked"
        android:text="ACCOUNT"
        android:textFontWeight="Bold"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/MapsButton"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateButton"
        app:layout_constraintVertical_bias="0.044"
        tools:textSize="24sp" />
    <ImageView
        android:layout_width="175dp"
        android:layout_height="172dp" app:srcCompat="@drawable/logo"
        android:id="@+id/LogoImage"
        android:onClick="LogoButtonClicked"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.047"/>

    <Button
        android:id="@+id/EventsButton"
        android:layout_width="133dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@color/IwicYellow"
        android:onClick="EventsButtonClicked"
        android:text="EVENTS"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/NewsButton"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogoImage"
        tools:textSize="24sp" />

    <Button
        android:id="@+id/NewsButton"
        android:layout_width="224dp"
        android:layout_height="112dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@color/IwicBlue"
        android:onClick="NewsButtonClicked"
        android:text="NEWS"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogoImage"
        tools:textSize="24sp" />

    <Button
        android:id="@+id/UpdateButton"
        android:layout_width="373dp"
        android:layout_height="102dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/IwicRed"
        android:onClick="UpdatesButtonClicked"
        android:text="UPDATES"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewsButton"
        tools:textSize="24sp" />
</android.support.constraint.ConstraintLayout>